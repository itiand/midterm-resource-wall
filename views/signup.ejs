<body>
  <div class="container bootstrap snippets bootdeys">
    <h1 class="title mb-4">Sign up for Foldr</h1>
    <div class="row">
      <div class="col-xs-12 col-sm-9">
        <form class="form-horizontal user-form">

            <div class="panel panel-default">
              <div class="panel-body text-center">
               <img src="images/foldr.png" class="profile-logo" alt="logo avatar" width="30%">
              </div>
            </div>

          <div class="panel panel-default">
            <div class="panel-heading">
            <h5 class="panel-title">User Info</h5>
            </div>

            <div class="panel-body">

              <div class="form-group">
                <label class="col-sm-2 control-label">Full Name</label>
                <p class="putithere"></p>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="signup-fullname">
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="signup-email">
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label">Username</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="signup-username">
                </div>
              </div>

              <div class="form-group">
                <label class="col-sm-2 control-label">Password</label>
                  <div class="col-sm-10">
                   <input type="password" class="form-control" id="signup-password">
                  </div>
              </div>

              <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                  <button id= "profile-signup-btn" type="submit" class="btn btn-primary">Sign Up</button>
                  <button id= "profile-cxl-btn" type="reset" class="btn btn-default">Cancel</button>
                </div>
              </div>

            </div>
          </div>

        </form>
      </div>
    </div>
    </div>

  <footer>
    <%- include('partials/_nav-bar') %>
